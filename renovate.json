{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "replacements:k8s-registry-move",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Madrid)"
  ],
  "ignorePaths": [
    "infrastructure/sidero-system/**",
    "**/*.enc.*",
    "**/integrations/**",
    "**/scripts/**"
  ],
  "pre-commit": {
    "enabled": true
  },
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  }
}
